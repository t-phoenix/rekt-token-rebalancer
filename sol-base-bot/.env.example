# Single configuration file (copy to .env and edit)

# General
NODE_ENV=development
LOG_LEVEL=info
RUN_MODE=paper
ENABLE_LIVE_TRADING=false

# Canonical token identifier used for matching Solana/Base prices
TOKEN_KEY=MY_TOKEN

# Polling
PRICE_POLL_INTERVAL_MS=500

# Risk / Strategy
MIN_PROFIT_THRESHOLD=0.02
TRADE_SIZE_USD=100

# Minimum total liquidity required (in USD) before considering arbitrage
# Set to 0 for testing with small pools, higher for production (e.g., 100 or more)
MIN_LIQUIDITY_USD=

# Solana
SOLANA_RPC_HTTP_URL=https://api.mainnet-beta.solana.com
SOLANA_PRIVATE_KEY=
SOLANA_TOKEN_MINT=
SOLANA_TOKEN_MINTS=
SOLANA_PRICE_SOURCE=mock
SOLANA_TOKEN_PRICE_USD=0.01
SOLANA_SOL_PRICE_USD=200
SOLANA_SWAP_SLIPPAGE_DECIMAL=0.25
SOLANA_PRIORITY_FEE_SOL=0

# Base
BASE_RPC_HTTP_URL=https://mainnet.base.org
BASE_CHAIN_ID=8453
BASE_PRIVATE_KEY_HEX=
BASE_TOKEN_ADDRESS=
BASE_USDC_ADDRESS=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913
BASE_PRICE_SOURCE=mock
BASE_TOKEN_PRICE_USD=0.012

# Execution (future)
UNISWAP_V2_ROUTER02_ADDRESS=
BASE_SWAP_SLIPPAGE_BPS=50
BASE_SWAP_DEADLINE_SECONDS=30

# Event Monitoring Configuration
PRICE_MOVEMENT_THRESHOLD=2.0
AUTO_EXECUTE_TRADES=true
SERVER_PORT=3000
ANALYSIS_COOLDOWN_MS=30000
EVENT_POLL_INTERVAL_MS=2000
LOG_ALL_EVENTS=false

# Optional: API Keys
COINMARKETCAP_API_KEY=
